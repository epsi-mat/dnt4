{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        body{
            background-color: #0F83E8;
        }
        h1, label{
            color: #ffffff;
        }
        .content-center{
            text-align: center;
            width: 50%;
            margin: 50px auto 0 auto;
        }
    </style>
{% endblock %}

{% block title %}
    Upload CSV/XML
{% endblock %}

{% block body %}
    <div class="content-center">
        <h1>Formulaire d'upload</h1>
        {{ form_start(form, {'action': path('api_post_file'), 'method': 'POST'}) }}
            {{ form_row(form.name) }}
            {{ form_row(form.submit) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}
